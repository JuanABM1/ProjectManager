<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectInformation"
    android:background="@color/beige"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/back"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:text="@string/project_text_view"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/textViewNameProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Nombre:" />

    <TextView
        android:id="@+id/ProjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="210dp"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/textViewTareas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Tareas" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTasks"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:id="@+id/ButtonCreateTask"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Crear Tarea"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuarios invitados"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center|start"
        android:layout_marginTop="125dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewInvitations"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="220dp"/>

    <Button
        android:id="@+id/buttonInvitate"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Invitar Usuarios"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="100dp"/>

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Eliminar proyecto"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="40dp" />


</FrameLayout>